{
  "name": "art-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently 'yarn start:client' 'yarn start:server'",
    "start:client": "node start.js",
    "start:server": "netlify-lambda serve ./lambda",
    "build": "yarn build:client && yarn build:server",
    "build:client": "parcel build src/index.html --out-dir dist/client",
    "build:server": "netlify-lambda build ./lambda",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/react-router": "^4.0.30",
    "concurrently": "^3.6.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.4.0",
    "http-proxy-middleware": "^0.19.0",
    "netlify-lambda": "^0.4.0",
    "parcel-bundler": "^1.9.7",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "jest": "^23.5.0",
    "node-fetch": "^2.2.0",
    "nprogress": "^0.2.0",
    "open-color": "^1.6.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-waypoint": "^8.0.3",
    "styled-components": "^3.4.5"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>src/setupTests.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  }
}
